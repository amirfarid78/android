<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@style/CustomSlideAnimation</item>
    </style>


    <style name="splashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff5757</item>
        <item name="colorPrimaryDark">#ff5757</item>
        <item name="colorAccent">#ff5757</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="MyTransparentBottomSheetDialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>


    <style name="TransparentActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>

    <style name="CustomChipTheme" parent="Theme.MaterialComponents.Light">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/graycolor2</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/d_round_top_corners_white</item>
    </style>


    <style name="Widget.Design.AppBarLayout" parent="android:Widget">
        <item name="elevation">0dp</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="whiteStatus" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="blackStatus" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blackColor</item>
        <item name="colorPrimaryDark">@color/blackColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:navigationBarColor">@color/blackColor</item>
    </style>


    <style name="CustomAppTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>





    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert"></style>


    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="colorPrimary">@color/whiteColor</item>
        <item name="colorPrimaryDark">@color/whiteColor</item>
        <item name="colorAccent">@color/whiteColor</item>
        <item name="android:progressBackgroundTint" tools:ignore="NewApi">@color/whiteColor</item>

    </style>

    <style name="MySeekBar2" parent="Widget.AppCompat.SeekBar">
        <item name="colorPrimary">@color/blackColor</item>
        <item name="colorPrimaryDark">@color/blackColor</item>
        <item name="colorAccent">@color/blackColor</item>
        <item name="android:progressBackgroundTint" tools:ignore="NewApi">@color/blackColor</item>

    </style>


    <style name="ProgressbarStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tabStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>



    <style name="ButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">@drawable/btn_blur</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="fontFamily">@font/sf_pro_regular</item>
    </style>

    <style name="ButtonStyle2" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">@drawable/btn_blur2</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/sf_pro_regular</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">#FFFFFF</item> <!-- Text color -->
        <item name="android:shadowColor">#000000</item> <!-- Shadow color -->
        <item name="android:shadowDx">2</item> <!-- Shadow X offset -->
        <item name="android:shadowDy">2</item> <!-- Shadow Y offset -->
        <item name="android:shadowRadius">4</item> <!-- Shadow radius -->
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="parent.contentLayout">
        <item name="android:background">@color/white</item>
        <item name="headercolor">@color/darkgray</item>
    </style>

    <style name="TabTextStyle" parent="Widget.Design.TabLayout">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/sf_pro_semi_bold</item>
    </style>

    <style name="TabTextStyleBold" parent="Widget.Design.TabLayout">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="TabTextStyle2" parent="Widget.Design.TabLayout">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/sf_pro_regular</item>
    </style>

    <style name="TabTextStyle3" parent="Widget.Design.TabLayout">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/sf_pro_regular</item>
    </style>

    <!-- TextInputLayout style -->
    <style name="OutlinedBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/appColor</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="helperTextTextColor">@color/black</item>
        <item name="hintTextColor">@color/appColor</item>
    </style>


    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/graycolor</item>
        <item name="colorControlNormal">@color/graycolor</item>
    </style>


    <style name="CustomSlideAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_right</item>
    </style>

    <style name="CustomPopUpAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_top</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_top</item>
        <item name="android:activityCloseExitAnimation">@anim/out_from_bottom</item>
    </style>




</resources>
