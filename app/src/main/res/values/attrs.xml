<resources>

    <declare-styleable name="SpannedGridLayoutManager">
        <attr name="android:orientation" />
        <attr name="spanCount" />
        <attr name="aspectRatio" format="string" />
    </declare-styleable>

    <declare-styleable name="UnderLineView">
        <attr name="text" format="reference|string" />
        <attr name="textColor" format="reference|integer" />
        <!--        <attr name="lineColor" format="reference|integer" />-->
        <attr name="select" format="reference|boolean" />
    </declare-styleable>

    <declare-styleable name="MaxHeightLinearLayout">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleDivisionView">
        <attr name="strokeWidth" format="dimension" />
        <attr name="dividerSpace" format="integer" />
        <attr name="counts" format="integer" />
        <attr name="strokeLineColor" format="color" />
    </declare-styleable>

    <declare-styleable name="Cookie">
        <attr name="cookieTitleColor" format="color" />
        <attr name="cookieMessageColor" format="color" />
        <attr name="cookieActionColor" format="color" />
        <attr name="cookieBackgroundColor" format="color" />
        <attr name="cookieTitleSize" format="dimension" />
        <attr name="cookieMessageSize" format="dimension" />
        <attr name="cookieActionSize" format="dimension" />
        <attr name="cookiePadding" format="dimension" />
    </declare-styleable>


    <declare-styleable name="LoadingButton">
        <attr name="loadingtext" format="string" localization="suggested" />
        <attr name="loadingtextColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="background" format="reference" />
        <attr name="textSize" format="dimension" />
        <attr name="progressColor" format="color" />
    </declare-styleable>

    <attr name="headercolor" format="reference" />

    <declare-styleable name="CrystalRangeSeekbar">
        <attr name="con_radius" format="float" />
        <attr name="min_value" format="float" />
        <attr name="max_value" format="float" />
        <attr name="min_start_value" format="float" />
        <attr name="max_start_value" format="float" />
        <attr name="steps" format="float" />
        <attr name="gap" format="float" />
        <attr name="fix_gap" format="float" />
        <attr name="bar_color" format="color" />
        <attr name="bar_highlight_color" format="color" />
        <attr name="left_thumb_color" format="color" />
        <attr name="left_thumb_color_pressed" format="color" />
        <attr name="left_thumb_image" format="reference" />
        <attr name="left_thumb_image_pressed" format="reference" />
        <attr name="right_thumb_color" format="color" />
        <attr name="right_thumb_color_pressed" format="color" />
        <attr name="right_thumb_image" format="reference" />
        <attr name="right_thumb_image_pressed" format="reference" />
        <attr name="position" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="data_type" format="enum">
            <enum name="_long" value="0" />
            <enum name="_double" value="1" />
            <enum name="_integer" value="2" />
            <enum name="_float" value="3" />
            <enum name="_short" value="4" />
            <enum name="_byte" value="5" />
        </attr>
    </declare-styleable>


</resources>