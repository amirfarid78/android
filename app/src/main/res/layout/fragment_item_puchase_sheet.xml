<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:context=".activitesfragments.shoping.ItemPuchaseSheet">


    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_cross"
        app:tint="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="7dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_shirt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:actualImageScaleType="centerCrop"
                    app:placeholderImage="@drawable/image_placeholder"
                    app:placeholderImageScaleType="centerCrop"
                    app:roundedCornerRadius="4dp" />
            </androidx.cardview.widget.CardView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="40dp"
                        android:layout_marginRight="40dp"
                        android:maxWidth="200dp"
                        android:maxLines="2"
                        android:text="The Vietnam i neeed to get you alone anlsandjandjllsakdjlkajsd"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <RelativeLayout
                            android:id="@+id/price_rlt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_current_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.0"
                                android:textColor="@color/yellow"
                                android:textSize="16dp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true">

                            <RelativeLayout
                                android:id="@+id/rl_plus"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="0dp"
                                    android:layout_marginRight="0dp"
                                    android:src="@drawable/plus"
                                    app:tint="@color/black" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_counter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:layout_toStartOf="@+id/rl_plus"
                                android:layout_toLeftOf="@+id/rl_plus">

                                <TextView
                                    android:id="@+id/tv_quantity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="center"
                                    android:text="1 "
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_minus"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:layout_toStartOf="@+id/rl_counter"
                                android:layout_toLeftOf="@+id/rl_counter">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="0dp"
                                    android:layout_marginRight="0dp"
                                    android:src="@drawable/ic_minus"
                                    app:tint="@color/black" />


                            </RelativeLayout>


                        </RelativeLayout>


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/delivery_address"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_10sdp">


        <RelativeLayout
            android:id="@+id/header_topped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:scaleType="fitStart"
                android:src="@drawable/home_un_selected" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/iv_home"
                android:layout_toRightOf="@+id/iv_home"
                android:text="@string/postal_address"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/border_black_not_rounded">

                <TextView
                    android:id="@+id/tv_address_change"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:padding="2dp"
                    android:text="@string/add_address"
                    android:textColor="@color/black"
                    android:textSize="12sp" />


            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_topped"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layoutDirection="ltr"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:visibility="gone" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remark"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:layout_marginVertical="@dimen/_10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:gravity="start"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/black"
        android:hint="You can remark the item details, such as: color, size, material, etc."
        android:background="@color/transparent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"/>
        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.0"
            android:textColor="@color/yellow"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/payBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/round_appcolor"
        android:backgroundTint="@color/appColor"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:text="Pay"
        android:textColor="@color/whiteColor"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="@dimen/_14sdp"/>

</LinearLayout>