<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activitesfragments.livestreaming.fragments.SettingBottonSheetFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/d_dark_black_transparent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp">

    <TextView
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_coins_for_join_streaming"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/tabAdd"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/d_round_mic_background">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_add_round"
                app:tint="@color/whiteColor" />

        </RelativeLayout>


        <EditText
            android:id="@+id/coinsEdit"
            android:gravity="center"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/white_btn_bg"
            android:text="0"
            android:inputType="numberSigned"
            android:maxLength="4"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textColorHint="@color/darkgray"
            android:textSize="@dimen/_13sdp"
            android:textCursorDrawable="@drawable/cursor_drawable" />


        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/tabMinus"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/d_round_mic_background">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_minus"
                app:tint="@color/whiteColor" />

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Streaming Type"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rgType"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/rbPrivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/private_"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_11sdp"
            android:theme="@style/RadioButton" />

        <RadioButton
            android:checked="true"
            android:layout_weight="1"
            android:id="@+id/rbPublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/public_"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_11sdp"
            android:theme="@style/RadioButton" />

    </RadioGroup>


    </LinearLayout>

</LinearLayout>

</layout>