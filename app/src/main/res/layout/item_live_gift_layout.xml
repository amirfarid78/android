<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginHorizontal="@dimen/_12sdp"
    android:layout_marginVertical="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_2sdp"
        android:background="@drawable/d_round_black_transparent_30">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userLayout"
            android:layout_centerVertical="true">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/profileImage"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_centerVertical="true"
                app:roundAsCircle="true"
                android:layout_marginStart="@dimen/_2sdp"
                app:placeholderImage="@drawable/ic_user_icon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_toEndOf="@+id/profileImage"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="@color/graycolor"
                    android:shadowDx="2"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="@string/username"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:shadowColor="@color/graycolor"
                    android:shadowDx="2"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="@string/comment_message_here"
                    android:textColor="@color/white"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />


            </LinearLayout>

        </RelativeLayout>


        <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivGift"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/userLayout"
        app:actualImageScaleType="centerCrop"
        app:failureImageScaleType="centerCrop"
         android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:placeholderImage="@drawable/ic_coins_image"
        app:placeholderImageScaleType="centerCrop" />

</RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/_5sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:shadowColor="@color/graycolor"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/whiteColor"/>
        <TextView
            android:id="@+id/giftCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:shadowColor="@color/graycolor"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/whiteColor"/>
    </LinearLayout>
</LinearLayout>
</layout>