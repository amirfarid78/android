<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/dateAndTimeContainerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10dp"
        tools:context=".activitesfragments.dishCreate.fragments.TimeAndDaySelectionBottomSheetFragment">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_cross"
                android:padding="3dp"
                app:tint="@color/appColor" />

            <TextView
                android:id="@+id/titleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <com.coheser.app.simpleclasses.MaxHeightLinearLayout
            android:id="@+id/dataLay"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:maxHeight="@dimen/_450sdp"
            android:orientation="vertical">


            <TextView
                android:id="@id/tvSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="center"
                android:text="@string/tell_costomers_how_the_food_is_priced_e_g_by_plate_weight_etc_"
                android:textSize="@dimen/_10sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6.2"
                android:layout_marginTop="@dimen/_22sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSelectTimeInDayHours"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_edt_gray"
                    android:drawableEnd="@drawable/ic_more"
                    android:paddingVertical="@dimen/_13sdp"
                    android:focusable="false"
                    android:clickable="true"
                    android:maxLines="1"
                    android:text="@string/hours"
                    android:gravity="start|center_vertical"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/_11sdp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>

                <EditText
                    android:id="@+id/etTimeInDayHours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:maxLength="3"
                    android:background="@drawable/round_edt_gray"
                    android:hint="@string/zero_zero_hr"
                    android:inputType="numberDecimal"
                    android:paddingVertical="@dimen/_13sdp"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>


        </com.coheser.app.simpleclasses.MaxHeightLinearLayout>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataLay"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:clickable="false"
            android:enabled="false"
            android:text="@string/done"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_11sdp"
            android:theme="@style/ButtonStyle" />


    </RelativeLayout>
</layout>