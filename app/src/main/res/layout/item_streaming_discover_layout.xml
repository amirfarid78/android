<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_130sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_10sdp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/profileblurImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:actualImageScaleType="centerCrop"
            app:failureImageScaleType="centerCrop"
            app:placeholderImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/image_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorblack_50"/>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
            android:elevation="10dp"
        android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/ivProfile"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_centerInParent="true"
                    app:actualImageScaleType="centerCrop"
                    app:failureImageScaleType="centerCrop"
                    app:placeholderImageScaleType="centerCrop"
                    fresco:placeholderImage="@drawable/ic_user_icon"
                    fresco:roundAsCircle="true"
                    android:elevation="10dp"
                    fresco:roundingBorderColor="@color/appColor"
                    fresco:roundingBorderWidth="@dimen/_3sdp" />
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_gif"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:visibility="visible"
                    app:lottie_rawRes="@raw/circle_glowing"/>
            </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxWidth="@dimen/_45sdp"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_10sdp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/ivVerified"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:src="@drawable/ic_verified"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>