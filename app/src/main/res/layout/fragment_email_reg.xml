<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        tools:context=".activitesfragments.accounts.PhoneFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_12sdp">


            <LinearLayout
                android:id="@+id/main_div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/emailFieldLayout"
                    app:boxBackgroundMode="outline"
                    app:errorTextColor="@color/appColor"
                    app:boxStrokeErrorColor="@color/transparent"
                    app:boxBackgroundColor="@color/transparent"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email_edit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:background="@drawable/d_bottom_gray_line"
                        android:gravity="start|center_vertical"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textColorHint="@color/graycolor"
                        android:textSize="@dimen/_11sdp" />

                </com.google.android.material.textfield.TextInputLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/passwordFieldLayout"
                        android:layout_marginTop="@dimen/_12sdp"
                        app:boxBackgroundMode="outline"
                        app:errorTextColor="@color/appColor"
                        app:endIconMode="password_toggle"
                        app:boxStrokeErrorColor="@color/transparent"
                        app:boxBackgroundColor="@color/transparent"
                        app:hintEnabled="false"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/password_et"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:hint="@string/password"
                            android:background="@drawable/d_bottom_gray_line"
                            android:inputType="textPassword"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textColorHint="@color/graycolor"
                            android:textSize="@dimen/_11sdp" />

                    </com.google.android.material.textfield.TextInputLayout>



                    <TextView
                        android:id="@+id/forgot_pass_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:justificationMode="inter_word"
                        android:paddingTop="@dimen/_6sdp"
                        android:paddingBottom="@dimen/_6sdp"
                        android:text="@string/forgot_password_q"
                        android:textColor="@color/appColor"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                <TextView
                    android:id="@+id/errorMsgTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:clickable="false"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="@string/next"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_11sdp"
                    android:theme="@style/ButtonStyle" />

            </LinearLayout>

            <TextView
                android:id="@+id/login_terms_condition_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_4sdp"
                android:justificationMode="inter_word"
                android:text="@string/by_signing_up_you_confirm_that_you_agree_to_our_terms_of_nuse_and_have_read_and_understood_our_privacy_policy_nif_you_signup_with_sms_sms_fee_may_apply"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible" />

        </RelativeLayout>

    </FrameLayout>
</layout>