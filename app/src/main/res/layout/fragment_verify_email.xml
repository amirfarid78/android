<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/verify_email_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        tools:context=".activitesfragments.accounts.VerifyEmailFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Toolbar Layout -->
            <RelativeLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentTop="true"
                android:background="@drawable/d_bottom_gray_line"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp">

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/goBack"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_back_btn"
                    app:tint="@color/black" />

                <!-- Title -->
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/sign_up"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Main Content Layout -->
            <LinearLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_margin="@dimen/_16sdp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Verification Icon -->
                <ImageView
                    android:id="@+id/email_verification_icon"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/check_your_email" />

                <!-- Title Text -->
                <TextView
                    android:id="@+id/verification_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:text="@string/check_your_email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <!-- Description Text -->
                <TextView
                    android:id="@+id/verification_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/verification_email_message"
                    android:textColor="@color/unselected_text_color"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center"
                    tools:text="We have sent an email to email@email.com. Please click on the link in that email for verification." />

                <!-- Information Text -->
                <TextView
                    android:id="@+id/verification_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/after_clicking_verification"
                    android:textColor="@color/unselected_text_color"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"
                    tools:text="After clicking verification, please log in to continue." />

                <!-- Disabled Button -->
                <Button
                    android:id="@+id/btn_login_continue"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:clickable="false"
                    android:enabled="false"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/log_in_continue"
                    android:textSize="@dimen/_11sdp"
                    android:theme="@style/ButtonStyle" />

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>
</layout>
