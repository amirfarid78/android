<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_toStartOf="@+id/customSwith"
            android:layout_height="@dimen/_38sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="start|center_vertical"
            android:paddingHorizontal="@dimen/_8sdp"
            android:textColor="@color/black"
            android:text="Appetizer"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp" />

        <com.dueeeke.tablayout.SegmentTabLayout
            android:id="@+id/customSwith"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center_horizontal"
            tl:tl_indicator_anim_enable="true"
            tl:tl_bar_stroke_color="@color/swithGray"
            tl:tl_textBold="BOTH"
            tl:tl_bar_color="@color/swithGray"
            tl:tl_bar_stroke_width="@dimen/_1sdp"
            tl:tl_textSelectColor="@color/white"
            tl:tl_textSize="@dimen/_10sdp"
            tl:tl_indicator_color="@color/appColor"
            tl:tl_textUnselectedColor="@color/black"
            tl:tl_indicator_corner_radius="@dimen/_6sdp"
            tl:tl_indicator_bounce_enable="false"
            tl:tl_indicator_margin_bottom="@dimen/_1sdp"
            tl:tl_indicator_margin_left="@dimen/_1sdp"
            tl:tl_indicator_margin_right="@dimen/_1sdp"
            tl:tl_indicator_margin_top="@dimen/_1sdp"
            tl:tl_tab_space_equal="true" />

    </RelativeLayout>
</layout>