<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10dp"
        tools:context=".activitesfragments.dishCreate.fragments.EditSomeTextBottomSheetFragment">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_cross"
                android:padding="3dp"
                app:tint="@color/appColor" />

            <TextView
                android:id="@+id/titleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <com.coheser.app.simpleclasses.MaxHeightLinearLayout
            android:id="@+id/dataLay"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:maxHeight="@dimen/_450sdp"
            android:orientation="vertical">


            <TextView
                android:id="@id/tvSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="center"
                android:text="@string/tell_costomers_how_the_food_is_priced_e_g_by_plate_weight_etc_"
                android:textSize="@dimen/_10sdp" />


            <EditText
                android:id="@+id/etEditBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_22sdp"
                android:paddingVertical="@dimen/_13sdp"
                android:background="@drawable/round_edt_gray"
                android:hint="@string/plate_container_lb_2_skewers"
                android:paddingHorizontal="@dimen/_8sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:textColor="@color/blackColor"
                android:textSize="@dimen/_11sdp" />


        </com.coheser.app.simpleclasses.MaxHeightLinearLayout>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataLay"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:clickable="false"
            android:enabled="false"
            android:text="@string/done"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_11sdp"
            android:theme="@style/ButtonStyle" />


    </RelativeLayout>
</layout>