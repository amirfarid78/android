<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.coheser.app.viewModels.EditProfileViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/edit_Profile_F"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        tools:context=".activitesfragments.profile.EditProfileActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fitsSystemWindows="true">

            <RelativeLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:paddingVertical="@dimen/_8sdp"
                    android:paddingStart="@dimen/_10dp"
                    android:paddingEnd="@dimen/_40sdp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_back_btn"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/edit_profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="@string/save"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/toolbar"
                android:background="@color/graycolor2" />

            <ScrollView
                android:id="@+id/scrollContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar"
                android:layout_centerHorizontal="true"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/main_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="@dimen/_12sdp">

                            <RelativeLayout
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp">


                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/ivProfile"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    app:placeholderImage="@drawable/ic_picture_placeholder"
                                    app:placeholderImageScaleType="centerCrop"
                                    app:roundAsCircle="true" />

                                <RelativeLayout
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginEnd="5dp"
                                    android:background="@drawable/ic_background_btn">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ic_round_plus" />
                                </RelativeLayout>


                            </RelativeLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:text="@string/change_photo"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="normal" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="@dimen/_12sdp">

                            <RelativeLayout
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp">

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/ivProfileVideo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    app:placeholderImage="@drawable/ic_video_placeholder"
                                    app:placeholderImageScaleType="centerCrop"
                                    app:roundAsCircle="true" />

                                <RelativeLayout
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginEnd="5dp"
                                    android:background="@drawable/ic_background_btn">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ic_round_plus" />
                                </RelativeLayout>

                            </RelativeLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:text="@string/change_video"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="normal" />

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/toolbar"
                        android:background="@color/graycolor2" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ivUsername"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_weight="0.3"
                            android:gravity="start|center_vertical"
                            android:text="@string/username"
                            android:textColor="@color/graycolor2"
                            android:textSize="@dimen/_11sdp" />

                        <EditText
                            android:id="@+id/etUsername"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="@color/graycolor2"
                            android:digits="0123456789AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz"
                            android:hint="@string/username"
                            android:inputType="text"
                            android:paddingStart="@dimen/_6sdp"
                            android:paddingEnd="@dimen/_6sdp"
                            android:textColor="@color/graycolor2"
                            android:textSize="@dimen/_11sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ivFirstname"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_weight="0.3"
                            android:gravity="start|center_vertical"
                            android:text="@string/first_name"
                            android:textColor="@color/graycolor2"
                            android:textSize="@dimen/_11sdp" />

                        <EditText
                            android:id="@+id/etFirstname"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="@color/graycolor2"
                            android:digits="AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz "
                            android:hint="@string/first_name"
                            android:inputType="textPersonName"
                            android:paddingStart="@dimen/_6sdp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/graycolor2"
                            android:textSize="@dimen/_11sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_weight="0.3"
                            android:gravity="start|center_vertical"
                            android:text="@string/last_name"
                            android:textColor="@color/graycolor2"
                            android:textSize="@dimen/_11sdp" />

                        <EditText
                            android:id="@+id/etLastname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/ivLastname"
                            android:layout_weight="1"
                            android:backgroundTint="@color/graycolor2"
                            android:digits="AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz "
                            android:hint="@string/last_name"
                            android:inputType="textPersonName"
                            android:paddingStart="@dimen/_6sdp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/graycolor2"
                            android:textColorHint="@color/graycolor"
                            android:textSize="@dimen/_11sdp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_weight="0.3"
                            android:gravity="start|center_vertical"
                            android:text="@string/website"
                            android:textColor="@color/graycolor2"
                            android:textSize="@dimen/_11sdp" />

                        <EditText
                            android:id="@+id/etWebsite"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/graycolor2"
                            android:hint="@string/dummy_link"
                            android:imeOptions="flagNavigateNext"
                            android:minLines="2"
                            android:nextFocusForward="@+id/jobtitle_edit"
                            android:paddingStart="@dimen/_6sdp"
                            android:paddingEnd="@dimen/_6sdp"
                            android:textColor="@color/graycolor2"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_weight="0.3"
                            android:gravity="start|center_vertical"
                            android:text="@string/bio"
                            android:textColor="@color/graycolor2"
                            android:textSize="@dimen/_11sdp" />

                        <EditText
                            android:id="@+id/etUserBio"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/graycolor2"
                            android:hint="@string/your_bio"
                            android:imeOptions="flagNavigateNext"
                            android:maxLength="120"
                            android:minLines="2"
                            android:nextFocusForward="@+id/jobtitle_edit"
                            android:paddingStart="@dimen/_6sdp"
                            android:paddingEnd="@dimen/_6sdp"
                            android:textColor="@color/graycolor2"
                            android:textSize="@dimen/_11sdp" />


                    </LinearLayout>


                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </FrameLayout>
</layout>