<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/d_bottom_gray_line">

    <androidx.cardview.widget.CardView
        android:id="@+id/img_card"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_60sdp"
        app:cardCornerRadius="10dp"
        android:elevation="0dp"
        app:cardMaxElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            fresco:actualImageScaleType="centerCrop"
            app:placeholderImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/placeholderImage" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/noPicLayout"
                android:visibility="gone"
                android:background="@color/colorblack_50">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/whiteColor"
                    android:gravity="center"
                    android:textSize="@dimen/_9sdp"
                    android:fontFamily="@font/sf_pro_semi_bold"
                    android:text="No Photo is\n available"/>
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/img_card"
        android:layout_toLeftOf="@id/img_next"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:id="@+id/nameTxt"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/_12sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            android:id="@+id/priceTxt"
            android:textColor="@color/greenColor"
            android:textSize="@dimen/_10sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status"
            android:id="@+id/statusTxt"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_next"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_next_new"
        android:layout_alignParentRight="true"
        app:tint="@color/black"
        android:layout_centerVertical="true"/>

</RelativeLayout>