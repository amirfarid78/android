<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activitesfragments.accounts.PhoneVarificationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/d_bottom_gray_line"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp">

            <ImageButton
                android:id="@+id/goBack"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:paddingVertical="@dimen/_8sdp"
                android:paddingEnd="@dimen/_40sdp"
                android:scaleType="fitStart"
                android:src="@drawable/ic_back_btn"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/phone_number"
                android:textAllCaps="false"
                android:id="@+id/titleTxt"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal" />

        </RelativeLayout>


        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true">


                <RelativeLayout
                    android:id="@+id/main_rlt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_12sdp"
                    android:padding="@dimen/_8sdp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/main_div"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/d_bottom_gray_line">


                        <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                            android:id="@+id/ccp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:padding="@dimen/_8sdp"
                            app:ccp_clickable="true"
                            app:ccp_keyboardAutoPopOnSearch="false"
                            app:ccp_showFlag="false"
                            app:ccp_textColor="@color/dimgray"
                            app:ccp_textSize="@dimen/_11sdp" />

                        <View
                            android:id="@+id/line_beside_country"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/ccp"
                            android:background="@color/graycolor" />

                        <EditText
                            android:id="@+id/phone_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_toEndOf="@+id/line_beside_country"
                            android:backgroundTint="@color/transparent"
                            android:hint="@string/phone_number"
                            android:inputType="phone"
                            android:textColor="@color/black"
                            android:textColorHint="@color/graycolor"
                            android:textSize="@dimen/_11sdp" />
                    </RelativeLayout>


                    <Button
                        android:id="@+id/btn_send_code"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_below="@+id/main_div"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/_32sdp"
                        android:clickable="false"
                        android:enabled="false"
                        android:gravity="center"
                        android:text="@string/send_code"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/_11sdp"
                        android:theme="@style/ButtonStyle" />


                </RelativeLayout>

            </FrameLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_12sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/enter_4_digit_code"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/msgTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:text="@string/your_code_was_sent_to"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:id="@+id/edit_num_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_1sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:gravity="center"
                            android:orientation="vertical">


                            <com.chaos.view.PinView
                                android:id="@+id/et_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:cursorVisible="true"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:gravity="center"
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="@dimen/_15sdp"
                                app:hideLineWhenFilled="false"
                                app:itemCount="6"
                                app:itemHeight="@dimen/_50sdp"
                                app:itemSpacing="@dimen/_6sdp"
                                app:itemWidth="@dimen/_40sdp"
                                app:lineColor="@color/darkgray"
                                app:viewType="line" />

                        </LinearLayout>


                        <Button
                            android:id="@+id/send_otp_btn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_22sdp"
                            android:clickable="false"
                            android:enabled="false"
                            android:gravity="center"
                            android:text="@string/next"
                            android:textColor="@color/whiteColor"
                            android:textSize="@dimen/_11sdp"
                            android:theme="@style/ButtonStyle" />

                        <RelativeLayout
                            android:id="@+id/rl1_id"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:visibility="gone">


                            <TextView
                                android:id="@+id/tv1_id"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_38sdp"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/_11sdp" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/resend_code"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="@string/resend_code"
                            android:textColor="@color/appColor"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


        </ViewFlipper>

    </RelativeLayout>
</layout>