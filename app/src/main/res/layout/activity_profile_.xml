<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable
            name="viewModel"
            type="com.coheser.app.viewModels.OthersProfileViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".activitesfragments.profile.ProfileActivity">

        <RelativeLayout
            android:id="@+id/dataLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">


            <RelativeLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp">


                <ImageButton
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:paddingVertical="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_40sdp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_back_btn"
                    app:tint="@color/black" />

                <LinearLayout
                    android:id="@+id/tabAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_44sdp"
                    android:paddingEnd="@dimen/_44sdp">

                    <TextView
                        app:showFullName="@{viewModel.userModel}"
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_semi_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/notification_btn"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_toStartOf="@+id/menu_btn"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_normal_notification"
                    android:visibility="gone"
                    app:tint="@color/black" />


                <ImageView
                    android:id="@+id/menu_btn"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_dots"
                    app:tint="@color/black" />

            </RelativeLayout>


            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">

                <com.google.android.material.appbar.AppBarLayout
                    style="@style/Widget.Design.AppBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <androidx.appcompat.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:contentInsetLeft="0dp"
                        app:contentInsetStart="0dp"
                        app:contentScrim="@color/white"
                        app:layout_scrollFlags="snap|scroll|enterAlways">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_collapseMode="parallax"
                            app:layout_collapseParallaxMultiplier="0.7">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="@dimen/_85sdp"
                                        android:layout_height="@dimen/_85sdp"
                                        android:layout_marginTop="@dimen/_5sdp">


                                        <com.facebook.drawee.view.SimpleDraweeView
                                            android:id="@+id/user_image"
                                            android:layout_width="@dimen/_80sdp"
                                            android:layout_height="@dimen/_80sdp"
                                            android:layout_alignParentTop="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_centerHorizontal="true"
                                            app:actualImageScaleType="centerCrop"
                                            app:failureImageScaleType="centerCrop"
                                            app:placeholderImageScaleType="centerCrop"
                                            fresco:placeholderImage="@drawable/ic_user_icon"
                                            fresco:roundAsCircle="true" />

                                        <com.coheser.app.simpleclasses.CircleDivisionView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentTop="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_centerHorizontal="true"
                                            android:visibility="gone"
                                            app:strokeWidth="@dimen/_3sdp"
                                            app:dividerSpace="2"
                                            app:strokeLineColor="@color/appColor"
                                            app:counts="2"
                                            android:id="@+id/circleStatusBar"/>

                                        <ImageView
                                            app:visibleIf="@{viewModel.userModel.verified>0}"
                                            android:id="@+id/varified_btn"
                                            android:layout_width="@dimen/_24sdp"
                                            android:layout_height="@dimen/_24sdp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_margin="@dimen/_2sdp"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/ic_verified"
                                            android:visibility="gone" />

                                    </RelativeLayout>

                                    <TextView
                                        app:showUserName="@{viewModel.userModel.username}"
                                        android:id="@+id/username2_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_6sdp"
                                        android:fontFamily="@font/sf_pro_semi_bold"
                                        android:textColor="@color/blackColor"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />


                                    <LinearLayout
                                        android:id="@+id/profile_detail"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:gravity="center_horizontal"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:id="@+id/following_layout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_horizontal"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/follow_count_txt"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingStart="@dimen/_12sdp"
                                                android:paddingTop="@dimen/_2sdp"
                                                android:paddingEnd="@dimen/_12sdp"
                                                android:paddingBottom="@dimen/_2sdp"
                                                app:showCount="@{String.valueOf(viewModel.userModel.following_count)}"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_15sdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingStart="@dimen/_8sdp"
                                                android:paddingTop="@dimen/_2sdp"
                                                android:paddingEnd="@dimen/_8sdp"
                                                android:paddingBottom="@dimen/_2sdp"
                                                android:text="@string/following"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_12sdp" />

                                        </LinearLayout>

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginEnd="10dp"
                                            android:gravity="center">

                                            <View
                                                android:layout_width="1dp"
                                                android:layout_height="25dp"
                                                android:layout_centerVertical="true"
                                                android:background="@color/graycolor" />
                                        </RelativeLayout>


                                        <LinearLayout
                                            android:id="@+id/fans_layout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_horizontal"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/fan_count_txt"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingStart="@dimen/_12sdp"
                                                android:paddingTop="@dimen/_2sdp"
                                                android:paddingEnd="@dimen/_12sdp"
                                                android:paddingBottom="@dimen/_2sdp"
                                                app:showCount="@{String.valueOf(viewModel.userModel.followers_count)}"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_15sdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingStart="@dimen/_8sdp"
                                                android:paddingTop="@dimen/_2sdp"
                                                android:paddingEnd="@dimen/_8sdp"
                                                android:paddingBottom="@dimen/_2sdp"
                                                android:text="@string/followers"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_12sdp" />
                                        </LinearLayout>

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginEnd="10dp"
                                            android:gravity="center">

                                            <View
                                                android:layout_width="1dp"
                                                android:layout_height="25dp"
                                                android:layout_centerVertical="true"
                                                android:background="@color/graycolor" />
                                        </RelativeLayout>

                                        <LinearLayout
                                            android:id="@+id/tabPrivacyLikes"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_horizontal"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/heart_count_txt"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingStart="@dimen/_12sdp"
                                                android:paddingTop="@dimen/_2sdp"
                                                android:paddingEnd="@dimen/_12sdp"
                                                android:paddingBottom="@dimen/_2sdp"
                                                app:showCount="@{String.valueOf(viewModel.userModel.likes_count)}"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_15sdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingStart="@dimen/_8sdp"
                                                android:paddingTop="@dimen/_2sdp"
                                                android:paddingEnd="@dimen/_8sdp"
                                                android:paddingBottom="@dimen/_2sdp"
                                                android:text="@string/likes"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_12sdp" />

                                        </LinearLayout>


                                    </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/tabFollowOtherUser"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:orientation="horizontal"
                                        android:gravity="center_horizontal"
                                        android:paddingStart="@dimen/_8sdp"
                                        android:paddingEnd="@dimen/_8sdp">

                                        <TextView
                                            android:id="@+id/tvFollowBtn"
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/_34sdp"
                                            android:layout_weight="1"
                                            android:background="@drawable/d_round_colord_6"
                                            android:fontFamily="@font/sf_pro_semi_bold"
                                            android:gravity="center"
                                            android:includeFontPadding="false"
                                            android:text="@string/follow"
                                            android:textColor="@color/whiteColor"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="visible" />


                                        <TextView
                                            android:id="@+id/shopBtn"
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/_34sdp"
                                            android:layout_marginStart="@dimen/_3sdp"
                                            android:layout_weight="1"
                                            android:background="@drawable/d_round_colord_6"
                                            android:fontFamily="@font/sf_pro_semi_bold"
                                            android:gravity="center"
                                            android:includeFontPadding="false"
                                            android:text="@string/shop"
                                            android:textColor="@color/whiteColor"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="gone" />

                                        <TextView
                                            android:id="@+id/messageBtn"
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/_34sdp"
                                            android:layout_marginStart="@dimen/_3sdp"
                                            android:layout_weight="1"
                                            android:background="@drawable/d_round_gray_8"
                                            android:fontFamily="@font/sf_pro_semi_bold"
                                            android:gravity="center"
                                            android:includeFontPadding="false"
                                            android:text="@string/messenge"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="visible" />
                                        <ImageView
                                            android:id="@+id/unFriendBtn"
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/_34sdp"
                                            android:layout_weight="0.5"
                                            android:background="@drawable/d_round_gray_8"
                                            android:gravity="center"
                                            android:layout_marginStart="@dimen/_3sdp"
                                            android:src="@drawable/ic_followed"
                                            app:tint="@color/appColor"
                                            android:padding="10dp"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="gone" />

                                        <com.facebook.drawee.view.SimpleDraweeView
                                            android:id="@+id/suggestionBtn"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/_3sdp"
                                            android:layout_weight="0.3"
                                            android:background="@drawable/d_round_gray_8"
                                            android:padding="@dimen/_5sdp"
                                            app:actualImageScaleType="fitCenter"
                                            app:placeholderImageScaleType="fitCenter"
                                            fresco:placeholderImage="@drawable/ic_bottom_arrow"
                                            app:tint="@color/black"/>

                                    </LinearLayout>


                                    <TextView
                                        android:id="@+id/tvBio"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_22sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginEnd="@dimen/_22sdp"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        app:showOrHide="@{viewModel.userModel.bio}"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="normal"
                                        android:visibility="visible" />

                                    <LinearLayout
                                        app:checkVisibility="@{viewModel.userModel.website}"
                                        android:id="@+id/tabLink"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="@dimen/_16sdp"
                                            android:layout_height="@dimen/_16sdp"
                                            android:src="@drawable/ic_link"
                                            app:tint="@color/black" />

                                        <TextView
                                            android:id="@+id/tvLink"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/_4sdp"
                                            android:layout_marginEnd="@dimen/_22sdp"
                                            android:gravity="center"
                                            android:includeFontPadding="false"
                                            android:text="@{viewModel.userModel.website}"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold" />

                                    </LinearLayout>


                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/tabSuggestion"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_12sdp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:paddingStart="@dimen/_10sdp"
                                        android:paddingEnd="@dimen/_10sdp">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentStart="true"
                                            android:layout_centerVertical="true"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:text="@string/suggested_accounts"
                                                android:textColor="@color/darkgray"
                                                android:textSize="@dimen/_11sdp"
                                                android:textStyle="bold" />

                                            <ImageView
                                                android:layout_width="@dimen/_16sdp"
                                                android:layout_height="@dimen/_16sdp"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="@dimen/_2sdp"
                                                android:rotation="180"
                                                android:src="@drawable/ic_round_alert"
                                                app:tint="@color/darkgray" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/tabAllSuggestion"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_centerVertical="true"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:text="@string/see_all"
                                                android:textColor="@color/darkgray"
                                                android:textSize="@dimen/_11sdp"
                                                android:textStyle="bold" />

                                            <ImageView
                                                android:layout_width="@dimen/_16sdp"
                                                android:layout_height="@dimen/_16sdp"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="@dimen/_2sdp"
                                                android:rotation="180"
                                                android:src="@drawable/recv_ic_arrow"
                                                app:tint="@color/darkgray" />


                                        </LinearLayout>

                                    </RelativeLayout>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvSugesstion"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:overScrollMode="never" />


                                    <TextView
                                        android:id="@+id/tvNoSuggestionFound"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:layout_marginBottom="@dimen/_15sdp"
                                        android:text="@string/no_suggested_account_found"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_13sdp"
                                        android:textStyle="bold"
                                        android:visibility="gone" />

                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>


                    </androidx.appcompat.widget.Toolbar>


                </com.google.android.material.appbar.AppBarLayout>


                <include
                    android:id="@+id/bottomTabs"
                    layout="@layout/layout_simple_profile_bottom_tabs" />


            </androidx.coordinatorlayout.widget.CoordinatorLayout>


        </RelativeLayout>

        <include
            android:id="@+id/shimmerRoot"
            layout="@layout/profile_shimmer_layout" />


    </FrameLayout>
</layout>