<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_75sdp"
                app:placeholderImage="@drawable/image_placeholder"
                app:placeholderImageScaleType="centerCrop" />

            <TextView
                android:id="@+id/nameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Gyro Plate"
                android:textColor="@color/newback"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/priceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="$18.99 \tCommision 10%"
                android:textColor="@color/graycolor2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/storeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="From Taco Bell"
                android:textColor="@color/graycolor2"
                android:textSize="12sp" />

            <Button
                android:id="@+id/remove_btn"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/round_btn_gray"
                android:backgroundTint="@null"
                android:text="Remove"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>