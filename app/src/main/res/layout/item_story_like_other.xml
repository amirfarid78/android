<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/datetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/d_round_gray_background_2"
        android:gravity="center"
        android:padding="@dimen/_4sdp"
        android:textColor="@color/darkgray"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/tabStory"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_105sdp"
        android:layout_below="@+id/datetxt"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_6sdp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/userStory"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_6sdp"
            app:placeholderImage="@drawable/image_placeholder" />


        <TextView
            android:id="@+id/storyEmoticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_12sdp"
            android:padding="@dimen/_2sdp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/_32sdp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/message_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabStory"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:textColor="@color/darkgray"
        android:textSize="@dimen/_10sdp" />

</RelativeLayout>