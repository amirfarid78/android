<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="bottom"
    android:background="@color/transparent"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_450sdp"
        android:background="@drawable/d_top_left_right_radius">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_6sdp">

            <ImageView
                android:id="@+id/goBack"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginBottom="5dp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_white_cross"
                app:tint="@color/darkgray" />

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_11sdp" />

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_layout"
            android:layout_above="@+id/write_layout"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/giftMainLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/ic_bg_round_lightgray10"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_4sdp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gifts"
                android:textStyle="bold"
                android:id="@+id/gifttitle"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/gifttitle"
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/giftRecylerView"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                tools:listitem="@layout/item_video_gift"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/giftLayout"/>

        </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recylerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/load_more_progress"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/write_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_43sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/d_top_gray_line"
            android:paddingStart="@dimen/_6sdp"
            android:paddingEnd="@dimen/_6sdp">

            <TextView
                android:id="@+id/tvComment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_toStartOf="@+id/send_btn_layout"
                android:background="@color/transparent"
                android:gravity="start|center_vertical"
                android:text="@string/add_a_comment"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/_11sdp" />


            <RelativeLayout
                android:id="@+id/send_btn_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_toStartOf="@+id/sendGiftBtn"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/mentionBtn"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:background="@color/transparent"
                    android:padding="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_at" />

                <ProgressBar
                    android:id="@+id/send_progress"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:padding="@dimen/_3sdp"
                    android:visibility="gone" />

            </RelativeLayout>


                <ImageView
                    android:id="@+id/sendGiftBtn"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:background="@color/transparent"
                    android:padding="@dimen/_2sdp"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_stream_gift" />


        </RelativeLayout>


        <ProgressBar
            android:id="@+id/noDataLoader"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:theme="@style/ProgressbarStyle"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tvNoCommentData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_1sdp"
            android:gravity="center"
            android:paddingStart="@dimen/_22sdp"
            android:paddingEnd="@dimen/_22sdp"
            android:text="@string/comments_will_appear_here"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/load_more_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:theme="@style/ProgressbarStyle"
            android:visibility="gone" />


    </RelativeLayout>
</FrameLayout>
