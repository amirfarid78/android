<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activitesfragments.sendgift.ExtraBonusFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <!-- Title Text -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get 5% extra Coins now"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/_15sdp">
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set your Card as default payment.\n Get 5% extra Coins every time you top up."
            android:textSize="14sp"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />

            <ImageView
                android:id="@+id/ivCoin"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_bonus_coins" />

        </RelativeLayout>
        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Maybe Later Button -->
            <Button
                android:id="@+id/btnMaybeLater"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Maybe Later"
                android:textColor="@color/black"
                android:background="@drawable/d_round_gray25" />

            <!-- Get Bonus Button -->
            <Button
                android:id="@+id/btnGetBonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Get Bonus"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_color_round_order"
                android:layout_marginLeft="8dp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
</layout>