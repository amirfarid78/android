<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/watchVideo_F"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    android:clickable="true"
    android:focusable="true"
    tools:context=".activitesfragments.WatchVideosActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.coheser.app.simpleclasses.VerticalViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tabComment"
                android:layout_centerInParent="true"
                android:background="@color/black"
                android:orientation="vertical" />

            <ImageView
                android:id="@+id/goBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:background="@android:color/transparent"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="130dp"
                android:paddingBottom="@dimen/_66sdp"
                android:scaleType="fitStart"
                android:src="@drawable/ic_back_btn"
                app:tint="@color/whiteColor" />


            <ImageView
                android:id="@+id/ivEditPlaylist"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@android:color/transparent"
                android:rotation="90"

                android:src="@drawable/ic_black_dots"
                android:visibility="gone"
                app:tint="@color/whiteColor" />

            <RelativeLayout
                android:id="@+id/upload_video_layout"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:layoutDirection="ltr"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/uploading_thumb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.6"
                    android:background="@color/black" />


                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:progressBarStyleHorizontal"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_centerInParent="true"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/circle_progress" />


                <TextView
                    android:id="@+id/tvProgressCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="normal"

                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/tabPlaylist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_above="@+id/tabSneekbarView"
                android:layout_centerInParent="true"
                android:background="@color/colorblack_50"
                android:layoutDirection="ltr"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivPlaylist"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_playlist_add"
                    app:tint="@color/whiteColor" />

                <TextView
                    android:id="@+id/tvPlaylistTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_toEndOf="@+id/ivPlaylist"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/playlist"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_end"
                    app:tint="@color/whiteColor" />

            </RelativeLayout>

            <View
                android:id="@+id/tabSneekbarView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/colorblack_50"
                android:clickable="false"
                android:focusable="false"
                android:layoutDirection="ltr"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/tabComment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/black"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp">

                <TextView
                    android:id="@+id/tvComment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/send_btn_layout"
                    android:gravity="center_vertical|start"
                    android:includeFontPadding="false"
                    android:text="@string/add_a_comment"
                    android:textAlignment="viewStart"
                    android:textColor="@color/graycolor"
                    android:textSize="@dimen/_13sdp" />


                <RelativeLayout
                    android:id="@+id/send_btn_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">

                    <ProgressBar
                        android:id="@+id/send_progress"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:indeterminateTint="@color/white"
                        android:padding="5dp"
                        android:visibility="gone" />

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</FrameLayout>