<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.coheser.app.viewModels.MyProfileViewModel" />
    </data>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activitesfragments.profile.ProfileTabFragment">

    <RelativeLayout
        android:id="@+id/layoutData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp">



            <RelativeLayout
                android:id="@+id/tabViewsHistory"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:paddingHorizontal="@dimen/_4sdp"
                    android:src="@drawable/ic_view_profile"
                    app:tint="@color/black" />

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:id="@+id/tabVisitorCount"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_circle"
                    android:backgroundTint="@color/redColor"
                    android:layout_width="@dimen/_19sdp"
                    android:layout_height="@dimen/_19sdp">


                    <TextView
                        android:id="@+id/tvVisitorCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="0"
                        android:maxLength="2"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />


                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tvVisitorPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:text="+"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:maxLength="2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />


                </RelativeLayout>

            </RelativeLayout>



            <LinearLayout
                android:id="@+id/tabAccount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    app:showFullName="@{viewModel.userModel}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    app:tint="@color/black" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/inboxbtn"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_toStartOf="@+id/menuBtn"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:padding="@dimen/_4sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_inbox"
                    app:tint="@color/black" />


                <RelativeLayout
                    android:id="@+id/tabInboxCount"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_circle"
                    android:backgroundTint="@color/redColor"
                    app:visibleIf="@{viewModel.inboxCount > 0}">


                    <TextView
                        android:id="@+id/tvInboxCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:maxLength="2"
                        android:text="@{String.valueOf(viewModel.inboxCount)}"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/_7sdp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tvInboxPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:maxLength="2"
                        android:text="+"
                        app:visibleIf="@{viewModel.inboxCount > 99}"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold"/>


                </RelativeLayout>

            </RelativeLayout>


            <ImageView
                android:id="@+id/menuBtn"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_menu2"
                app:tint="@color/black" />


        </RelativeLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appbarLayout"
                    style="@style/Widget.Design.AppBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <androidx.appcompat.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:contentInsetLeft="0dp"
                        app:contentInsetStart="0dp"
                        app:contentScrim="@color/white"
                        app:layout_scrollFlags="snap|scroll|enterAlways">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_collapseMode="parallax"
                            app:layout_collapseParallaxMultiplier="0.7">

                            <LinearLayout
                                android:id="@+id/top_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="@dimen/_85sdp"
                                    android:layout_height="@dimen/_85sdp"
                                    android:layout_marginTop="@dimen/_12sdp">


                                    <com.facebook.drawee.view.SimpleDraweeView
                                        android:id="@+id/user_image"
                                        android:layout_width="@dimen/_80sdp"
                                        android:layout_height="@dimen/_80sdp"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        app:actualImageScaleType="centerCrop"
                                        app:failureImageScaleType="centerCrop"
                                        app:placeholderImageScaleType="centerCrop"
                                        fresco:placeholderImage="@drawable/ic_user_icon"
                                        fresco:roundAsCircle="true" />

                                    <com.coheser.app.simpleclasses.CircleDivisionView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:visibility="gone"
                                        app:strokeWidth="@dimen/_2sdp"
                                        app:dividerSpace="2"
                                        app:strokeLineColor="@color/appColor"
                                        app:counts="2"
                                        android:id="@+id/circleStatusBar"/>

                                    <ImageView
                                        app:visibleIf="@{viewModel.userModel.verified==1}"
                                        android:id="@+id/varified_btn"
                                        android:layout_width="@dimen/_24sdp"
                                        android:layout_height="@dimen/_24sdp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentBottom="true"
                                        android:layout_margin="@dimen/_2sdp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/ic_verified" />

                                </RelativeLayout>

                                <TextView
                                    app:showUserName="@{viewModel.userModel.username}"
                                    android:id="@+id/username2_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_6sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_12sdp"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/following_layout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:layout_marginHorizontal="@dimen/_4sdp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/follow_count_txt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:showCount="@{String.valueOf(viewModel.userModel.following_count)}"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_15sdp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_3sdp"
                                            android:text="@string/following"
                                            android:textColor="@color/darkgray"
                                            android:textSize="@dimen/_13sdp" />

                                    </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/fans_layout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="@dimen/_4sdp"
                                        android:gravity="center_horizontal"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/fan_count_txt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:showCount="@{String.valueOf(viewModel.userModel.followers_count)}"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_15sdp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_3sdp"
                                            android:text="@string/followers"
                                            android:textColor="@color/darkgray"
                                            android:textSize="@dimen/_13sdp" />
                                    </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/tabPrivacyLikes"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="@dimen/_4sdp"
                                        android:gravity="center_horizontal"
                                        android:orientation="vertical">

                                        <TextView
                                            app:showCount="@{String.valueOf(viewModel.userModel.likes_count)}"
                                            android:id="@+id/heart_count_txt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_15sdp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_3sdp"
                                            android:text="@string/likes"
                                            android:textColor="@color/darkgray"
                                            android:textSize="@dimen/_13sdp" />

                                    </LinearLayout>


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/shopBtn"
                                        android:layout_width="@dimen/_100sdp"
                                        android:layout_height="@dimen/_28sdp"
                                        android:background="@drawable/d_round_colord_6"
                                        android:fontFamily="@font/sf_pro_semi_bold"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="@string/shop"
                                        android:textColor="@color/whiteColor"
                                        android:textSize="@dimen/_12sdp"
                                        android:visibility="visible" />

                                    <TextView
                                        android:id="@+id/shareProfileBtn"
                                        android:layout_width="@dimen/_100sdp"
                                        android:layout_height="@dimen/_28sdp"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:background="@drawable/d_round_gray_8"
                                        android:fontFamily="@font/sf_pro_semi_bold"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="@string/wallet"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12sdp"
                                        android:visibility="visible" />


                                    <ImageButton
                                        android:id="@+id/edit_profile_btn"
                                        android:layout_width="@dimen/_38sdp"
                                        android:layout_height="@dimen/_28sdp"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:background="@drawable/d_round_gray_8"
                                        android:padding="@dimen/_6sdp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/ic_edit_outline" />

                                </LinearLayout>


                                <TextView
                                    android:id="@+id/tvBio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_22sdp"
                                    android:layout_marginTop="@dimen/_12sdp"
                                    android:layout_marginEnd="@dimen/_22sdp"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    app:showOrHide="@{viewModel.userModel.bio}"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="normal"
                                    android:visibility="gone" />

                                <LinearLayout
                                    app:checkVisibility="@{viewModel.userModel.website}"
                                    android:id="@+id/tabLink"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_16sdp"
                                        android:layout_height="@dimen/_16sdp"
                                        android:src="@drawable/ic_link" />

                                    <TextView
                                        android:id="@+id/tvLink"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_4sdp"
                                        android:layout_marginEnd="@dimen/_22sdp"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="@{viewModel.userModel.website}"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="bold" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="@dimen/_22sdp"
                                    android:background="@color/gainsboro" />

                            </LinearLayout>

                        </LinearLayout>


                    </androidx.appcompat.widget.Toolbar>


                </com.google.android.material.appbar.AppBarLayout>


                <include layout="@layout/layout_profile_bottom_tabs" />


            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        <LinearLayout
            android:id="@+id/create_popup_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_15sdp"
            android:animateLayoutChanges="true"
            android:background="@drawable/popup_background"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_6sdp"
                android:text="@string/tap_to_create_first_video"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>


</FrameLayout>

</layout>