<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/d_round_top_corners_white"
    tools:context=".activitesfragments.sendgift.BonusCheckOutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Out"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivCoinIcon"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_coin" />

            <TextView
                android:id="@+id/tvCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0 Coins"
                android:textSize="@dimen/_12sdp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvBonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="+0 Coins"
                android:textSize="@dimen/_11sdp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_rounded_solid_primary"
                android:padding="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvRewardInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enjoy 5% reward on every top up."
            android:textSize="@dimen/_11sdp"
            android:textColor="#666666"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginVertical="@dimen/_25sdp" />

        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By tapping 'Buy', you accept the following terms of service: Coins and Payment Terms."
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="16dp"
            android:gravity="center" />

        <Button
            android:id="@+id/btnAddCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Card"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_color_round_order"
            android:layout_marginTop="16dp" />

</LinearLayout>

</FrameLayout>

</layout>