<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.coheser.app.viewModels.DiscoverViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".activitesfragments.DiscoverFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topLayout"
            android:layout_marginTop="@dimen/_12sdp">


        <androidx.cardview.widget.CardView
                android:id="@+id/search_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_toStartOf="@+id/shopBtn"
                app:cardBackgroundColor="@color/lightgraycolor"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_34sdp"
                    android:paddingStart="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_6sdp">

                    <ImageButton
                        android:id="@+id/search"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:padding="@dimen/_2sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_search"
                        app:tint="@color/dimgray" />

                    <TextView
                        android:id="@+id/search_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/search"
                        android:backgroundTint="@color/transparent"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/_6sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_4sdp"
                        android:text="@string/search_"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/_11sdp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <ImageButton
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center_vertical"
                android:id="@+id/shopBtn"
                android:scaleType="fitCenter"
                android:padding="@dimen/_2sdp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_shop_line"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"/>

        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/topLayout"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/white">


                <androidx.coordinatorlayout.widget.CoordinatorLayout
                        android:id="@+id/dataContainer"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <com.google.android.material.appbar.AppBarLayout
                        style="@style/Widget.Design.AppBarLayout"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.Toolbar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:contentInsetLeft="0dp"
                            app:contentInsetStart="0dp"
                            app:contentScrim="@color/white"
                            app:layout_scrollFlags="snap|scroll|enterAlways">


                            <LinearLayout
                                app:layout_collapseMode="parallax"
                                app:layout_collapseParallaxMultiplier="0.7"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_130sdp">

                                    <androidx.viewpager.widget.ViewPager
                                        android:id="@+id/viewPager"
                                        android:layout_centerInParent="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />

                                    <RelativeLayout
                                        android:layout_centerInParent="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="bottom|center_horizontal">

                                        <com.rd.PageIndicatorView
                                            android:layout_alignParentBottom="true"
                                            android:layout_centerHorizontal="true"
                                            android:id="@+id/pageIndicatorView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="@dimen/_4sdp"
                                            android:visibility="visible"
                                            app:piv_animationType="worm"
                                            app:piv_dynamicCount="true"
                                            app:piv_interactiveAnimation="true"
                                            app:piv_radius="@dimen/_2sdp"
                                            app:piv_selectedColor="@color/appColor"
                                            app:piv_unselectedColor="@color/graycolor"
                                            app:piv_viewPager="@id/viewPager" />

                                    </RelativeLayout>

                                </RelativeLayout>

                            </LinearLayout>


                        </androidx.appcompat.widget.Toolbar>


                    </com.google.android.material.appbar.AppBarLayout>


                    <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/_12sdp">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:id="@+id/streamingLayout">

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/tabLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_32sdp"
                                android:layout_centerHorizontal="true"
                                app:tabIndicatorHeight="0dp"
                                app:tabGravity="center"
                                app:tabMode="scrollable"
                                app:tabPaddingEnd="@dimen/_8sdp"
                                app:tabTextAppearance="@style/TabTextStyleBold"
                                app:tabSelectedTextColor="@color/black"
                                app:tabTextColor="@color/graycolor2" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                android:orientation="horizontal"
                                android:id="@+id/streamingRecylerView"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/discover"
                            android:id="@+id/discoverTxt"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_below="@+id/streamingLayout"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recylerview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/discoverTxt"
                            android:layout_above="@+id/load_more_progress"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fillViewport="true" />

                        <ProgressBar
                            app:checkVisibility="@{viewModel.loadMoreProgressVisibility}"
                            android:id="@+id/load_more_progress"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:paddingVertical="@dimen/_20sdp"
                            android:theme="@style/ProgressbarStyle" />

                    </RelativeLayout>

                </FrameLayout>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>


                <include
                    android:id="@+id/shimmerLayout"
                    android:visibility="gone"
                    layout="@layout/shimmer_list_slider_layout" />


            </RelativeLayout>


        </RelativeLayout>


    </FrameLayout>
</layout>
