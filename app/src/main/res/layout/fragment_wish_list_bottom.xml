<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activitesfragments.livestreaming.fragments.WishListBottomF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/d_dark_black_transparent">

        <ImageButton
            android:id="@+id/closeBtn"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="end"
            android:scaleType="fitEnd"
            android:background="@color/transparent"
            android:src="@drawable/ic_cross"/>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wish_list"
            android:textSize="@dimen/_13sdp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_gifts_to_your_wish_list_so_viewers_can_send_gifts_to_you"
            android:textSize="@dimen/_11sdp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:scrollIndicators="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerView"
                    tools:itemCount="2"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_wishlist_gifts"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/addGiftBtn"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="match_parent"
                    android:minHeight="@dimen/_110sdp"
                    android:background="@drawable/d_less_round_gray_transparent">
            <ImageView
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"
                android:src="@drawable/ic_round_plus"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"/>
                </RelativeLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/topGifterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:layout_marginVertical="@dimen/_15sdp">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/topRecylerView"
            android:orientation="horizontal"
            tools:itemCount="3"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_top_gifter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_5_wish_list_gifters"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_8sdp"/>

        </LinearLayout>

        <Button
            android:visibility="gone"
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/save"
            android:textSize="@dimen/_12sdp"
            android:textAllCaps="false"
            android:background="@drawable/btn_color_round_order"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</layout>