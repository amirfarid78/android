<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activitesfragments.livestreaming.fragments.ShowProfileBottomF">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="-50dp"
        android:elevation="10dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:placeholderImage="@drawable/ic_user_icon"
            app:roundAsCircle="true"
            android:id="@+id/profileImage"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/d_top_left_right_radius_white"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_39sdp"
            android:gravity="center_horizontal|center_vertical">
            <TextView
                android:id="@+id/nameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢"
                android:layout_marginStart="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Host"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/vivid_red"
                android:layout_marginStart="@dimen/_5sdp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/description_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="@string/thank_you_for_joining_my_livestream_follow_me_to_be_nnotified_next_time_i_go_live"
            android:gravity="center"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/_11sdp"


            />
        <Button
            android:id="@+id/donebtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/round_appcolor"
            android:backgroundTint="@color/appColor"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>
</layout>