<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    style="@style/parent.contentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/order_detail_main_d"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/order_detail_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/order_id"
                    android:textColor="@color/delete_message_text"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/order_id_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/order_date"
                    android:textColor="@color/delete_message_text"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/order_date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:text="dd-MM-YYYY"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/status_view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/order_detail_div"
            android:layout_marginTop="5dp"
            android:background="@color/lightgraycolor" />

        <LinearLayout
            android:id="@+id/product_detail_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_detail_div"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/order_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    app:actualImageScaleType="centerCrop"
                    app:placeholderImage="@drawable/imagepreview"
                    app:placeholderImageScaleType="centerCrop"
                    app:roundedCornerRadius="4dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/order_detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Product Title"
                        android:textColor="@color/black"
                        android:textSize="12dp" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_product_name"
                        android:layout_marginTop="5dp"
                        android:visibility="invisible">

                        <TextView
                            android:id="@+id/tv_size_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/size"
                            android:textColor="@color/delete_message_text"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/order_detail_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_toEndOf="@+id/tv_size_label"
                            android:layout_toRightOf="@+id/tv_size_label"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:textSize="10dp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/order_detail_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$ 0.0"
                                android:textColor="@color/appColor"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" X "
                                android:textColor="@color/appColor"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/order_detail_quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textColor="@color/appColor"
                                android:textSize="12dp" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <View
            android:id="@+id/view_product_detail"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/product_detail_div"
            android:layout_marginTop="5dp"
            android:background="@color/lightgraycolor" />


        <RelativeLayout
            android:id="@+id/total_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_product_detail"
            android:layout_marginTop="5dp"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/total"
                android:textColor="@color/delete_message_text"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/total_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0.00"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_below="@+id/total_div"
            android:layout_marginTop="5dp"
            android:background="@color/lightgraycolor" />

    </RelativeLayout>


</RelativeLayout>

</layout>
