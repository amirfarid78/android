<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<FrameLayout
    style="@style/parent.contentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_id"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:elevation="4dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Order History Detail"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/back_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:padding="@dimen/_5sdp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_back_btn"
                    app:tint="@color/black"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_store_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:maxWidth="70dp"
                        android:text="@string/chat"
                        android:textColor="@color/black" />

                </RelativeLayout>

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/order_detail_main_d"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_id">

            <RelativeLayout
                android:id="@+id/order_detail_div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingEnd="15dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:id="@+id/first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Order Status"
                        android:textColor="@color/delete_message_text"
                        android:textSize="13sp" />


                    <TextView
                        android:id="@+id/order_status_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/second_rlt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/order_id"
                        android:textColor="@color/delete_message_text"
                        android:textSize="13sp" />


                    <TextView
                        android:id="@+id/order_id_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>


                <Button
                    android:id="@+id/track_order_btn"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/border_rounded_dark_red"
                    android:text="Track Order"
                    android:textAllCaps="false"
                    android:textColor="@color/appColor"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/second_rlt"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/order_date"
                        android:textColor="@color/delete_message_text"
                        android:textSize="13sp" />


                    <TextView
                        android:id="@+id/order_date_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/status_view"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_below="@+id/order_detail_div"
                android:layout_marginTop="8dp"
                android:background="@color/lightgraycolor" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottom"
                android:layout_below="@+id/status_view"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/delievry_info_div"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingStart="15dp"
                        android:paddingLeft="15dp"
                        android:paddingEnd="15dp"
                        android:paddingRight="15dp">

                        <ImageView
                            android:id="@+id/arrow_down"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:src="@drawable/ic_arrow_drop_down_black_24dp"
                            app:tint="@color/black" />

                        <ImageView
                            android:id="@+id/arrow_up"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:rotation="180"
                            android:src="@drawable/ic_arrow_drop_down_black_24dp"
                            android:visibility="gone"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/text_action1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Delivery Information"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/info_rlt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text_action1"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <RelativeLayout
                                android:id="@+id/user_name_div"
                                android:layout_width="match_parent"
                                android:layout_height="30dp">

                                <TextView
                                    android:id="@+id/order_user_name_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_below="@+id/user_name_div">

                                <TextView
                                    android:id="@+id/order_user_email_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/user_add_div"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_below="@+id/user_name_div">

                                <TextView
                                    android:id="@+id/order_user_address_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:maxLines="2"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    android:textStyle="normal" />

                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_below="@+id/user_add_div">

                                <TextView
                                    android:id="@+id/order_user_city_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_below="@+id/user_add_div">

                                <TextView
                                    android:id="@+id/order_user_postal_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:id="@+id/layout_action1_view"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_below="@+id/delievry_info_div"
                        android:layout_marginTop="8dp"
                        android:background="@color/lightgraycolor" />

                    <RelativeLayout
                        android:id="@+id/rc_relative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_action1_view">

                        <TextView
                            android:id="@+id/order_store_name_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Seller"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/order_store_name_label"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <View
                            android:id="@+id/view_store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_below="@+id/order_store_name_label"
                            android:layout_marginTop="10dp"
                            android:background="@color/lightgraycolor" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recylerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view_store_name" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/rc_view"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_below="@+id/rc_relative"
                        android:background="@color/lightgraycolor" />

                    <RelativeLayout
                        android:id="@+id/seller_note_div"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rc_view"
                        android:paddingStart="15dp"
                        android:paddingLeft="15dp"
                        android:paddingEnd="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/label_note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Message for seller"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/order_note"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:gravity="end"
                            android:maxWidth="250dp"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="12dp" />


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_below="@+id/order_note"
                            android:layout_marginTop="5dp"
                            android:background="@color/lightgraycolor" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/order_summary_div"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/seller_note_div"
                        android:paddingStart="15dp"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/order_summary"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/li_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_summary_div"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:paddingBottom="15dp">

                        <RelativeLayout
                            android:id="@+id/tax_div"
                            android:layout_width="match_parent"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/subtotal"
                                android:textColor="@color/delete_message_text"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/total_sub_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="0.00"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/discount_div"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:visibility="gone"
                            android:layout_below="@+id/tax_div">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/discount"
                                android:textColor="@color/delete_message_text"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/total_discount_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/percent_cart"
                                android:layout_toLeftOf="@+id/percent_cart"
                                android:text="0.00"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/percent_cart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:text="%"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/shipping_div"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:visibility="gone"
                            android:layout_below="@+id/discount_div">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/shipping_and_handling"
                                android:textColor="@color/delete_message_text"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/total_shipping_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="0.00"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/view_below_shipping"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_below="@+id/shipping_div"
                            android:layout_marginTop="5dp"
                            android:background="@color/lightgraycolor" />

                        <RelativeLayout
                            android:id="@+id/total_div"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@+id/view_below_shipping">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/total"
                                android:textColor="@color/delete_message_text"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/total_price_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="0.00"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>


            </androidx.core.widget.NestedScrollView>

            <RelativeLayout
                android:id="@+id/bottom"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:clickable="true">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/contact_store_rlt"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp">

                        <Button
                            android:id="@+id/contact_store_btn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_rounded_with_red_background"
                            android:text="Contact Store"
                            android:textAllCaps="false"
                            android:textColor="@color/whiteColor" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
</layout>