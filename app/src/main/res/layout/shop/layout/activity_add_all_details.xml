<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".activitesfragments.shoping.AddProducts.tabs.AddAllDetailsA">

    <LinearLayout
        android:id="@+id/uperview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_above="@id/lowerview">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_cross"
            app:tint="@color/black"
            android:scaleType="fitStart"/>
        <TextView
            android:id="@+id/fragNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/condition"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ProgressBar
                android:id="@+id/progress1"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/d_progressbar"
                android:progress="100"
                android:layout_marginRight="@dimen/_10dp"/>
            <ProgressBar
                android:id="@+id/progress2"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_10dp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/d_progressbar"/>
            <ProgressBar
                android:id="@+id/progress3"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_10dp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/d_progressbar"/>
            <ProgressBar
                android:id="@+id/progress4"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/d_progressbar"/>
        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_gravity="top|center_horizontal|bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lowerview"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/graycolor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/back_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/d_round_gray_background_2"
                android:text="@string/back"
                android:layout_margin="10dp"
                android:textColor="@color/appColor"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/next_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_rounded_background"
                android:text="@string/next"
                android:layout_margin="10dp"
                android:textColor="@color/whiteColor"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>