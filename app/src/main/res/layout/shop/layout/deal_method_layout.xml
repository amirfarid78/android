<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <CheckBox
        android:id="@+id/arrangeMyself"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/arrange_delivery_myself"
        android:layoutDirection="rtl"
        android:checked="true"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graycolor"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:id="@+id/meet_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/meet_up"
        android:layoutDirection="rtl"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectLocationLayout"
        android:padding="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@drawable/rounded_border_tv">
        <ImageView
            android:id="@+id/loc_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/location_selected"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/loc_img"
            android:layout_marginStart="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/locationTxt"
                android:textColor="@color/graycolor2"
                android:text="@string/you_selected_location_here"/>
        </LinearLayout>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/edit"
            app:tint="@color/graycolor"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>

</LinearLayout>