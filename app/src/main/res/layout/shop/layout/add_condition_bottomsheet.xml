<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="17dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/condition"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:drawableStart="@drawable/baseline_close_24"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <RadioButton
            android:id="@+id/brand_new_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/brand_new"
            android:layoutDirection="rtl"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/never_used_may_come_with_orignal_packaging_or_tag"
            android:textSize="12sp"
            android:textColor="@color/dimgray"
            android:layout_marginTop="-5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/graycolor"
            android:layout_marginTop="7dp"/>

        <RadioButton
            android:id="@+id/like_new_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/like_new"
            android:layoutDirection="rtl"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/used_once_or_twice_as_good_as_new"
            android:textSize="12sp"
            android:textColor="@color/dimgray"
            android:layout_marginTop="-5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/graycolor"
            android:layout_marginTop="7dp"/>

        <RadioButton
            android:id="@+id/lu_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lightly_used"
            android:layoutDirection="rtl"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/used_with_care_flaws_if_any_are_barely_noticeable"
            android:textSize="12sp"
            android:textColor="@color/dimgray"
            android:layout_marginTop="-5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/graycolor"
            android:layout_marginTop="7dp"/>

        <RadioButton
            android:id="@+id/wu_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/well_used"
            android:layoutDirection="rtl"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/has_minor_flaws_or_defects"
            android:textSize="12sp"
            android:textColor="@color/dimgray"
            android:layout_marginTop="-5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/graycolor"
            android:layout_marginTop="7dp"/>

        <RadioButton
            android:id="@+id/hu_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/heavily_used"
            android:layoutDirection="rtl"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/has_obniously_sign_of_use_or_defects"
            android:textSize="12sp"
            android:textColor="@color/dimgray"
            android:layout_marginTop="-5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/graycolor"
            android:layout_marginTop="7dp"/>
    </RadioGroup>

</LinearLayout>