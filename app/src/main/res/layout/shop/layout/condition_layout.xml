<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/condition"
        android:textColor="@color/black"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/select_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose"
        android:background="@drawable/d_round_gray_background_2"
        android:textColor="@color/blackColor"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:drawableRight="@drawable/ic_next_black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tip_add_close_up_photos_to_show_defects_if_any"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="@color/graycolor2"/>

</LinearLayout>