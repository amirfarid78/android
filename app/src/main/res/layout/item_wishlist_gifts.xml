<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardBackgroundColor="@color/darkgray_30">
    <RelativeLayout
        android:id="@+id/gift_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/toplayout"
            android:paddingHorizontal="@dimen/_10sdp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/giftImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/_8sdp"
            fresco:placeholderImage="@drawable/ic_coin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="299 Coins"
            android:id="@+id/coinCountTxt"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sdp"/>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:max="100"
            android:progress="0"
            android:layout_marginTop="@dimen/_5sdp"
            style="@android:style/Widget.ProgressBar.Horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/giftReceiveCountTxt"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_11sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/0"
            android:id="@+id/giftwantTxt"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_11sdp"/>
        </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_cross"
            android:scaleType="fitEnd"
            android:layout_gravity="end"
            android:id="@+id/crossBtn"
            android:visibility="gone"
            android:paddingEnd="@dimen/_5sdp"
            android:layout_alignParentEnd="true"
            android:paddingTop="@dimen/_5sdp"
            android:background="@color/transparent"/>


        <TextView
            android:id="@+id/sendBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appColor"
            android:gravity="center"
            android:text="@string/send"
            android:visibility="gone"
            android:includeFontPadding="false"
            android:layout_below="@+id/toplayout"
            android:textColor="@color/whiteColor"
            android:paddingVertical="@dimen/_3sdp"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>