<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activitesfragments.TagProduct.RatingBottomSheet">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
       android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/d_round_top_corners_white"
        android:padding="@dimen/activity_horizontal_margin">

        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:background="@color/graycolor" />

        <TextView
            android:id="@+id/title_ratings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ratings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4dp"/>

        <!-- Subtext (Over 4.5) -->
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Over 4.5"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@id/title_ratings"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <SeekBar
            android:id="@+id/rating_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="48"
            android:min="40"
            android:progress="40"
            android:layout_marginHorizontal="@dimen/_13sdp"
            android:thumb="@drawable/d_custom_rating_thumb"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:weightSum="5">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:src="@drawable/d_custom_rating_thumb"
                    android:textColor="@android:color/black"
                    android:gravity="start"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:src="@drawable/d_custom_rating_thumb"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:src="@drawable/d_custom_rating_thumb"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:src="@drawable/d_custom_rating_thumb"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:src="@drawable/d_custom_rating_thumb"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rating_labels_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4.0"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4.2"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4.4"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4.6"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4.8"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center"/>
        </LinearLayout>

        <!-- View Results Button -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_28sdp"
            android:text="View Results"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="#FF3B30"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>


</FrameLayout>
</layout>